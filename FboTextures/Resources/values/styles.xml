<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text">
        <item name="android:padding">2dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#AFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#8000</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
    </style>

    <style name="button">
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">#0000</item>
    </style>

    <style name="button_header" parent="@style/button">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="button_footer" parent="@style/button">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">55dp</item>
    </style>

</resources>